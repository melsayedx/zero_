{
  "name": "log-ingestion-platform",
  "version": "1.0.0",
  "description": "Minimal log ingestion platform with clean architecture",
  "main": "src/app.js",
  "scripts": {
    "build:proto": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:src/infrastructure/grpc/generated --grpc_out=grpc_js:src/infrastructure/grpc/generated proto/**/*.proto",
    "build:proto:ts": "grpc_tools_node_protoc --plugin=protoc-gen-ts=node_modules/.bin/protoc-gen-ts --ts_out=grpc_js:src/infrastructure/grpc/generated proto/**/*.proto",
    "build": "npm run build:proto && node src/app.js",
    "start": "npm run build:proto && node src/app.js",
    "start:http2": "npm run build:proto && node src/app-http2.js",
    "start:http3": "npm run build:proto && node src/app-http3.js",
    "start:cluster": "npm run build:proto && node cluster.js",
    "start:cluster:dev": "npm run build:proto && node cluster.js --workers 4",
    "dev": "npm run build:proto && nodemon --max-old-space-size=2048 --max-semi-space-size=64 src/app.js",
    "dev:http2": "npm run build:proto && nodemon src/app-http2.js",
    "dev:http3": "npm run build:proto && nodemon src/app-http3.js",
    "cluster": "npm run build:proto && node cluster.js",
    "cluster:dev": "npm run build:proto && nodemon cluster.js",
    "cluster:prod": "NODE_ENV=production npm run build:proto && NODE_ENV=production node cluster.js",
    "setup:certs": "bash setup-certs.sh",
    "grpc:example": "node grpc-client-example.js",
    "test:json": "node test-json-backward-compatible.js",
    "test:protobuf": "node test-protobuf-single.js",
    "test:protobuf-batch": "node test-protobuf-batch.js",
    "test:all": "./test-all-formats.sh",
    "test:batch-validation": "node test-batch-validation.js",
    "test:batch-buffer": "node test-batch-buffer.js",
    "test:before-after": "node test-clickhouse-before-after.js",
    "test:http2": "./run-http2.sh",
    "test:http3": "./run-http3.sh",
    "test:auth": "node test-auth-flow.js",
    "test:grpc-auth": "node test-grpc-auth.js",
    "perf:protobuf": "node performance-test-protobuf.js",
    "benchmark:batch": "node benchmark-batch-validation.js"
  },
  "keywords": [
    "logs",
    "ingestion",
    "clickhouse"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clickhouse/client": "^1.14.0",
    "@fastify/compress": "^8.3.0",
    "@fastify/helmet": "^13.0.2",
    "@grpc/grpc-js": "^1.14.2",
    "@grpc/proto-loader": "^0.8.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "argon2": "^0.44.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "google-protobuf": "^4.0.1",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.1",
    "nanoid": "^5.1.6",
    "protobufjs": "^7.5.4"
  },
  "devDependencies": {
    "grpc-tools": "^1.13.1",
    "nodemon": "^3.1.11"
  }
}
